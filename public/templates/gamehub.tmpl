<div id="lobbyeditor-container">
    <div class="lobbyeditor">
        <div class="error"></div>
        <div class="editor-section">
            <div class="section-title">Title:</div>
            <div class="section-elements">
                <input class="title" type="text" />
            </div>
            <div style="clear: both;"></div>
        </div>
        <div class="editor-section game-section">
            <div class="section-title">Game:</div>
            <div class="section-elements">
                <div class="element-line">
                    <p><input type="radio" id="select-steam-game" name="game-radio" checked /><label for="select-steam-game" class="steam-game-label">Steam Game</label></p>
                    <div class="steam-input-container"><div class="searchicon"></div><input type="text" class="steam-game"/><div class="spinner"></div></div>
                </div>
                <div class="steam-search"></div>
                <div class="element-line">
                    <p><input type="radio" id="select-other-game" name="game-radio" /><label for="select-other-game" class="other-game-label">Other</label></p>
                    <input type="text" class="other-game" />
                </div>
            </div>
            <div style="clear: both;"></div>
        </div>
        <div class="editor-section icon-section">
            <div class="section-title">Image URL:</div>
            <div class="section-elements">
                <input class="custom-icon" type="text" />
            </div>
            <div style="clear: both;"></div>
        </div>
        <div class="editor-section">
            <div class="section-title">Players:</div>
            <div class="section-elements">
                <div class="element-line">
                    <p><input type="radio" id="select-max-players" name="players-radio" checked /><label for="select-max-players" class="max-players-label">Max</label></p>
                    <span><input type="text" class="spinner-input max-players" value="5" /></span>
                </div>
                <div class="element-line">
                    <p><input type="radio" id="select-unlimited-players" name="players-radio" /><label for="select-unlimited-players" class="unlimited-players-label">Unlimited</label></p>
                </div>
            </div>
            <div style="clear: both;"></div>
        </div>
        <div class="editor-section">
            <div class="section-title">Password:</div>
            <div class="section-elements">
                <div class="element-line">
                    <p><input type="radio" id="select-password" name="password-radio" /><label for="select-password" class="password-label">Yes</label></p>
                    <input type="password" class="password" />
                </div>
                <div class="element-line">
                    <p><input type="radio" id="select-nopassword" name="password-radio" checked /><label for="select-nopassword" class="nopassword-label">No</label></p>
                </div>
            </div>
            <div style="clear: both;"></div>
        </div>
        <div class="editor-section">
            <div class="section-title">Description:</div>
            <div class="section-elements">
                <textarea class="description"></textarea>
            </div>
            <div style="clear: both;"></div>
        </div>
        <button class="submit-lobbyeditor"></button>
        <div class="loading"></div>
    </div>
</div>

